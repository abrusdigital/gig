<odoo>
  <data>
     <record id="view_helpdesk_filter_inherited" model="ir.ui.view">
      <field name="name">helpdesk.ticket.search</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_search" />
      <field name="priority" eval="3"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='team']" position="after">
            <filter string="Customer" name="customer" context="{'group_by':'partner_id'}"/>

        </xpath>
        </field>
      </record>

      <template id="gig_helspdesk_ticket_view_template_inherit" name="Helpdesk Tickets" inherit_id="helpdesk.tickets_followup">
    <xpath expr="//div[3]" position="before">
        <div class="row mb-4">
                        <strong class="col-lg-2">Time(24 Hr)</strong>
                        <span class="col-lg-10" t-field="ticket.create_time"/>
                    </div>
    </xpath>
      </template>
  </data>
</odoo>